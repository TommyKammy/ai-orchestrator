# AI Orchestrator Environment Configuration
# Copy this file to .env and replace all CHANGE_ME values with real secrets

# PostgreSQL Configuration
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_IMAGE=pgvector/pgvector:pg18
POSTGRES_PGDATA=/var/lib/postgresql/data
REDIS_IMAGE=redis:8.6-alpine

# n8n Configuration
N8N_ENCRYPTION_KEY=CHANGE_ME
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME
N8N_WEBHOOK_API_KEY=CHANGE_ME
SLACK_INTERNAL_AUTH=CHANGE_ME
N8N_DEFAULT_LOCALE=ja
N8N_IMAGE=ai-n8n-ja:2.8.3

# Domain Configuration
N8N_HOST=n8n.example.com

# Policy Engine (OPA)
OPA_URL=http://opa:8181
POLICY_MODE=shadow
POLICY_TIMEOUT_MS=800
POLICY_FAIL_MODE=open
OPA_BUNDLE_URL=http://policy-bundle-server:8088/bundles/policy.tar.gz
OPA_POLL_INTERVAL=10

# Policy registry DB access (for future policy bundle dynamic mode)
POLICY_REGISTRY_DB_HOST=postgres
POLICY_REGISTRY_DB_PORT=5432
POLICY_REGISTRY_DB_NAME=ai_memory
POLICY_REGISTRY_DB_USER=ai_user
POLICY_REGISTRY_DB_PASSWORD=CHANGE_ME

# Publish endpoint auth token (n8n CE workflows)
POLICY_PUBLISH_TOKEN=CHANGE_ME
